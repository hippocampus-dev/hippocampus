<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="root-menu" label="Openbox 3">
  <separator label="Development" />
  <item label="Google Chrome">
    <action name="Execute">
      <command>/usr/bin/google-chrome-stable --remote-debugging-port=59222</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="IntelliJ">
    <action name="Execute">
      <command>/usr/bin/intellij-idea-ultimate-edition</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Virt Manager">
    <action name="Execute">
      <command>/usr/bin/virt-manager</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Wireshark">
    <action name="Execute">
      <command>/usr/bin/wireshark</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <separator label="Media" />
  <item label="Evince">
    <action name="Execute">
      <command>/usr/bin/evince</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Inkscape">
    <action name="Execute">
      <command>/usr/bin/inkscape</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Peek">
    <action name="Execute">
      <command>/usr/bin/peek</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <separator label="Settings" />
  <item label="PulseAudio Volume Control">
    <action name="Execute">
      <command>/usr/bin/pavucontrol</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Piper">
    <action name="Execute">
      <command>/usr/bin/piper</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <separator />
  <item label="Log Out">
    <action name="Exit">
      <prompt>yes</prompt>
    </action>
  </item>
  <item label="Suspend">
    <action name="Execute">
      <prompt>yes</prompt>
      <command>systemctl hybrid-sleep</command>
    </action>
  </item>
  <item label="Reboot">
    <action name="Execute">
      <prompt>yes</prompt>
      <command>systemctl reboot</command>
    </action>
  </item>
  <item label="Poweroff">
    <action name="Execute">
      <prompt>yes</prompt>
      <command>systemctl poweroff</command>
    </action>
  </item>
</menu>

</openbox_menu>
